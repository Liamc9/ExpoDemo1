{
  "expo": {
    "name": "BasilNew",
    "slug": "basilnew",
    "owner": "liamc9",
    "version": "1.0.0",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "basilnew",
    "icon": "./src/assets/logos/BasilAppIcon.png",
    "splash": {
      "image": "./src/assets/logos/BasilNameNoBG.png",
      "resizeMode": "contain",
      "backgroundColor": "#43A047"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.basilnew.app",
      "buildNumber": "2",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSLocationWhenInUseUsageDescription": "Allow Basil to use your location to auto-fill your shop location and show nearby shops."
      }
    },
    "android": {
      "package": "com.basilnew.app",
      "versionCode": 1,
      "edgeToEdgeEnabled": true,
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/logos/BasilAppIcon.png",
        "backgroundColor": "#43A047"
      }
    },
    "web": {
      "favicon": "./src/assets/logos/favicon.png"
    },
    "plugins": [
      "expo-web-browser",
      "expo-dev-client",
      "expo-asset"
    ],
    "extra": {
      "eas": {
        "projectId": "d21c179f-f1e4-4ebf-b287-b4923cc776ad"
      }
    }
  }
}
